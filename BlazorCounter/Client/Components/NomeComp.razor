@using BlazorCounter.Client.Models
<EditForm Model="@N" OnValidSubmit = "@(e => OnSalva.InvokeAsync(N))">
    <input type = "text" id = "nome" @bind-value = "N.Name" placeholder = "Inserisci parola"/><br>
    <button type = "submit" class = "btn btn-primary">Invia</button>
    <button type = "button" class = "btn btn-primary" @onclick = "Nav">Naviga</button>
    <button type = "button" class = "btn btn-danger" @onclick = "(e => OnElimina.InvokeAsync(N))">Elimina</button>
</EditForm>

@for(int i = ListaNome.Count - 1; i >= 0; i--)
{
    <tr>@ListaNome.ElementAt(i).Name</tr>
}